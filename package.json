{
  "name": "@arcata/source",
  "version": "0.0.0",
  "license": "SEE LICENSE.md",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "catalog": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "~5.2.2",
    "vite": "^5.0.0",
    "vitest": "~0.34.6",
    "@vitejs/plugin-react": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.1",
    "vite-plugin-dts": "~2.3.0",
    "eslint": "~8.48.0",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "postcss": "^8.4.33",
    "@playwright/test": "^1.36.0"
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "test": "bun run --filter '*' test",
    "lint": "bunx ultracite check",
    "lint:fix": "bunx ultracite fix --unsafe",
    "typecheck": "tsc --build",
    "prepare": "husky",
    "env": "bun run scripts/switch-env.ts",
    "env:local": "bun run scripts/switch-env.ts local",
    "env:prod": "bun run scripts/switch-env.ts production",
    "env:status": "bun run scripts/switch-env.ts --status",
    "deploy:hq": "godeploy deploy --project=\"ArcataAI HQ\"",
    "deploy:auth": "godeploy deploy --project=\"ArcataAI Auth\"",
    "docker:build:api": "bun run scripts/docker.ts build --app=api",
    "docker:push:api": "bun run scripts/docker.ts push --app=api",
    "docker:build-push:api": "bun run scripts/docker.ts build-push --app=api",
    "docker:run:api": "bun run scripts/docker.ts run --app=api",
    "docker:stop:api": "bun run scripts/docker.ts stop --app=api",
    "docker:restart:api": "bun run scripts/docker.ts restart --app=api",
    "db:generate-types": "bunx supabase gen types typescript --local > libs/db/src/lib/database.types.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@supabase/supabase-js": "^2.39.0",
    "i18next": "^21.0.2",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-xhr-backend": "^3.2.2",
    "joi": "^17.11.0",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-router-dom": "6.11.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@biomejs/biome": "2.3.10",
    "@playwright/test": "catalog:",
    "@swc-node/register": "~1.6.7",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@tailwindcss/vite": "catalog:",
    "@testing-library/react": "14.0.0",
    "@types/bun": "^1.3.5",
    "@types/node": "18.14.2",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "~0.34.6",
    "@vitest/ui": "~0.34.6",
    "husky": "^9.1.7",
    "jsdom": "~22.1.0",
    "lint-staged": "^16.2.7",
    "postcss": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "ultracite": "6.4.2",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
